{
  "root": true, // projectroot rules for eslint.
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true // mocha is our test.
  },
  "rules": {
  "no-console": 1,
  "no-debugger": 0
  }
}
